                "SERVICE_MAP":"{\"<serviceName>-db\":\"<serviceName>-db:5462\"}",
                "USE_CORS":"true",
                "DB_USER":"\"postgres\"",
                "DB_PASSWORD":"\"password\""
            },
            "args": []
        }
    ]
