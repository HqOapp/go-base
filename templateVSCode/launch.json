    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "<projectPath>/src/main/server.go",
            "env": {
                "ENVIRONMENT":"local",
                "SERVICE_MAP":"{\"<serviceName>-db\":\"<serviceName>-db:5462\"}",
                "USE_CORS":"true",
                "DB_USER":"\"postgres\"",
                "DB_PASSWORD":"\"password\""
            },
            "args": []
        },
